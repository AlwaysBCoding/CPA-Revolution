<style>

.container {
	width: 1200px;
}

#subHeader {
	width: 100%;
	height: 125px;
	background-color: rgba(242,245,246,.4);
	border: 1px solid #c8d7dc;
	box-sizing: border-box;
}

.section {
	width: 100%;
	height: 125px;
	border: 1px solid #c8d7dc;
	padding: 0	px;
	background-color: rgba(242,245,246,.4);
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
	position: relative;
	font-family: 'Marmelad';
	cursor: pointer;
}

.section img {
	height: 125px;
	width: 125px;
	box-sizing: border-box;
	position: absolute;
	right: 0px;
	top: 0px;
	cursor: pointer;
	
}

.section h3 {
	padding-left: 25px;
	cursor: pointer;
	font-size: 22px;
}

.sectionContainer {
	position: relative;
	margin-top: 25px;
}

.section button {
	margin: 10px 30px;
	font-weight: bold;
}

#contentAreaRight {
	width: 100%;
	display: none;
	background-color: rgba(242,245,246,.4);
	border: 1px solid #c8d7dc;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
}

#rightSide {
	width: 48.5%;
	float: right;
}

#leftSide {
	width: 48.5%;
	float: left;
	margin-top: 25px;
}

/* SUB HEADER
===================== */
#subHeaderWrapper {
	width: 1200px;
	margin: 0 auto;
}

#subHeader h3 {
	font-size: 52px;
	text-align: center;
	margin-top: 20px;
}

#subHeader h4 {
	font-size: 26px;
	padding-top: 10px;
	text-align: center;
}


/* TABLE
===================== */

td:nth-child(1) {
	min-width: 100px;
}

td:nth-child(3) {
	min-width: 55px;
}

th {
	text-align: center;
}

/* MISC
===================== */
p.passScore {
	color: green;
	font-weight: bold;
	font-size: 90px;
	text-shadow: 5px 5px 5px black;
	z-index: 2;
	margin-top: 60px;
	margin-left: 50px;
}

p.examDate {
	color: blue;
	font-weight: bold;
	font-size: 70px;
	text-shadow: 5px 5px 5px black;
	z-index: 2;
	margin-top: 60px;
	margin-left: 35px;
}
/* JDL STYLES
==================== */

.hidden {
	display: none;
}

#signUp {
	width: 100%;
	height: 500px;
	background-color: rgba(242,245,246,.4);
	border: 1px solid #c8d7dc;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	border-radius: 6px;
}

#signUp h3 {
	font-family: 'Marmelad';
	text-align: center;
}

#signUp input {
	border-radius: 10px;
}

form {
	width: 80%;
	margin: 25px auto 0 auto;
}

.university_field {
	margin-top: 50px;
}

input.actions {
	width: 225px;
	border-radius: 0;
	position: relative;
	bottom: 6px;
	font-weight: bold;
}
</style>

<script>
$(function() {
	$("#navSections").addClass("active");
});

$(function() {
	$("#subHeaderWrapper").html($("#subHeaderHTML").html());
});

// Slide Toggle to show section info on a click to a section image
var slideCounter = 0;
$(function() {
	$(".section img").on("click", function(e) {
		e.preventDefault();
		var sectionCode = $(this).parent().attr("class");
		$("#contentAreaRight").html($("mark."+sectionCode).html());
		 var i = 0;
		 	if (slideCounter % 2 == 0) {
			$("div.section").not("#"+sectionCode).stop().slideToggle(function() {
				i++; i == 3 ? $("#contentAreaRight").stop().slideToggle() : "";
		 		slideCounter++;
		 	});
		 	} else {
				$("#contentAreaRight").stop().slideToggle(function() {
				$("div.section").not("#"+sectionCode).stop().slideToggle();	
				slideCounter++;
				});
			}
	}); // on
}); // load

// Trigger the image click on clicks to the parent div, and heading element as well
$(function() {
	$("div.section").on("click", function(e) { $(e.target).find('img').trigger("click"); });
	$("div.section h3").on("click", function(e) { $(e.target).parent().find('img').trigger("click"); });
	
});
</script>	

<div id="leftSide">
	
	<% if !session[:user_id] %>	
	<div id="signUp">
	<h3>Create an account to start studying</h3>
	<%= render 'signUp' %>
	</div>
	<% end %>

</div>	

<div id="rightSide">

	<div class="sectionContainer">
	<% @sections.each_with_index do |section, index| %>
	  <div id="<%= section.code %>" class="section">
		<h3><%= section.name %></h3>
		<a href="/sections/<%= section.code %>"><button class="btn">Individual Topics</button></a>
		<%= link_to button_tag("Full Length Test", :class => 'btn'), "/user_test?section_id=#{section.id}", :method => 'post' %></a>
		<a class="<%= section.code %>"><img src="assets/<%= section.code %>_logo.jpg" /></a>
	  </div> <!-- section -->
	<% end %>
	</div> <!-- sectionContainer -->

	<div id="contentAreaRight"></div>

</div> <!-- rightSide -->

<%= render 'subHeader' %>
<%= render 'section_info' %>
<%= render 'section_stats' %>