<style>
#contentWrapper {
	min-width: 960px;
	margin: 0 auto;
	position: relative;
}

#topicList {
	float: left;
	width: 350px;
}

#quizSetup {
	float: right;
	width: 400px;
	height: 400px;
	border: 1px solid #c8d7dc;
	background-color: rgb(242,245,246); // Old browsers
	@include filter-gradient(#f2f5f6, #c8d7dc, vertical); // IE6-9
	@include background-image(linear-gradient(top, rgba(242,245,246,1) 0%,rgba(227,234,237,1) 37%,rgba(200,215,220,1) 100%));
	-webkit-border-radius: 6px;
	position: relative;
}
</style>

<p id="notice"><%= notice %></p>

<h2><%= @section.name %></h2>
<br />

<div id="contentWrapper">

	<div id="topicList" class="leftSide">
	<ul>
	<% @section.topics.each do |topic| %>
	  <li><%= topic.name %></li>
	<% end %>
	</ul>
	</div> <!-- topicList -->

	<div id="quizSetup" class="rightSide">
		<%= form_tag '/user_test' do %>
		<%= hidden_field_tag :section_id, @section.id %>
		<table>
			<tbody>
				<tr><td>Practice Type:</td><td><%= select_tag :test_format, options_for_select([['Practice by Topics', 'topics'],["Take Full #{@section.code} Exam", 'cpa']]), {:include_blank => true} %></td></tr>
				<tr><td colspan='2'><%= submit_tag 'Generate Test' %></td></tr>
			</tbody>	
		</table>	
		<% end %>
	</div> <!-- quizSetup -->

</div> <!-- contentWrapper -->	

<br />
