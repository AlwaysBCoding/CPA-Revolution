<script>
$(function() {
	$("#navSignIn").addClass("active");
});
</script>

<% if flash[:notice] %>
<p class="alert"><%= flash[:notice] %></p>
<% end %>

<% if @user.present? %>
	<%= @user.username %>
<% end %>

<%= form_tag '/signin' do %>
	<%= label_tag :username %>
	<%= text_field_tag :username %>
	
	<%= label_tag :password %>
	<%= password_field_tag :password %>
	<br />
	<%= submit_tag 'Sign In' %>
<% end %>

	