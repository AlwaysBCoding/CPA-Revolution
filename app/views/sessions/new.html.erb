<style>
.container {
	margin-top: 25px;
}
</style>

<script>
$(function() {
	$("#navSignIn").addClass("active");
});
</script>

<% if @user.present? %>
	<%= @user.username %>
<% end %>

<h1>Sign In to CPA Revolution</h1>
<hr />

<%= form_tag '/signin' do %>
	<%= label_tag :username %>
	<%= text_field_tag :username %>
	
	<%= label_tag :password %>
	<%= password_field_tag :password %>
	<br />
	<%= submit_tag 'Sign In' %>
<% end %>

	