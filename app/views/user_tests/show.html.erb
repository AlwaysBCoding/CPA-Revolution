<style>

/* DIV Layout
===================== */
.container {
	width: 1200px;
}

#contentArea {
	width: 1200px;
	margin: 0 auto;
	position: relative;
}

#questionBox {
	height: 500px;
	width: 900px;
	float: left;
	box-sizing: border-box;
	border: 1px solid black;
}

#rightSidebar {
	width: 200px;
	float: right;
}

/* Question Formatting 
===================== */

ol {
	list-style-type: upper-alpha;
}

</style>

<script>

</script>

<div id="contentArea">
	
	<section id="questionContent">
		
		<div id="questionBox">
			<div id="questionText">
				<p><%= @user_test.questions[0].question_text %></p>
				<hr />
			</div> <!-- questionText -->
			<div id="choices">
				<ol>
				<% @user_test.questions[0].answers.each do |choice| %>
				<li><%= choice.answer_text %></li>
				<% end %>
				</ol>
			</div> <!-- choices -->		
		</div> <!-- questionBox -->
		
		<div id="rightSidebar">
			
			<div id="questionInfo">
				<h2>Test id # <%= @user_test.id %></h2>
				<h1>Testlet 2</h2><br />
				<h2>Question 1</h2><br />
				<h3>Topic: <%= @user_test.questions[0].topic.name %></h3>
				<h3>SubTopic: SubTopic</h3><br />
			</div> <!-- questionInfo -->
			
			<div id="timer>">	
				<h2>Timer</h2>
				<p>15:32</p>
			</div> <!-- timer -->
			
			<div id="runningScore">
				<h3>Correct: 0</h3>
				<h3>Incorrect: 0</h3>
			</div> <!-- runningScore -->
		</div>	<!-- rightSidebar -->
			
	</section> <!-- questionContent -->
	
	<section id="pagination">
		<p>Number of Questions<%= @user_test.questions.length %></p>
	</section> <!-- pagination -->			
	
</div>	