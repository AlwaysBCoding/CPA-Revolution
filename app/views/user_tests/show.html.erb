<style>

/* DIV Layout
===================== */
.container {
	width: 1200px;
}

#contentArea {
	width: 1200px;
	margin: 0 auto;
	position: relative;
}

#questionBox {
	height: 500px;
	width: 900px;
	float: left;
	box-sizing: border-box;
/*	border: 1px solid black;
*/}

#rightSidebar {
	width: 200px;
	float: right;
}

/* Question Formatting 
===================== */

.clearfix {
	clear: both;
}

#questionBox p, #questionBox li {
	font-size: 16px;
	padding: 3px;
}

#questionBox li {
	margin-left: 10px;
}

ol.choices {
	list-style-type: upper-alpha;
}

.choices a:hover {
	text-decoration: none;
}

.page a {
	line-height: 15px;
	padding: 10px;
}

.page a.single_digit {
	padding: 10px 14px;
}

#questionText p {
	padding: 10px;
}

#answers a {
	padding-left: 6px;
}
</style>

<script>
// Set the countdown timer
$(function() {
	var sec = $("#timer span").text();
	var timer = setInterval(function() {
		$("#timer span").text(--sec);
		if(sec == 0) {
			clearInterval(timer);
		}
	}, 1000);
});

// AJAX Change Question
$(function() {
	$(".page a").click(function() {
	var questionNumber = $(this).attr("href").replace(/.*=/, "");
	$("#answers form").attr("action", "/user_test/" + questionNumber);
	$.getJSON(window.location.href + $(this).attr("href"), 
			  function(data){
		      	$(".choices").html("");
			  	$("#questionText span").text(data.question_text);
			    $(".questionSource").text(data.source);
				$(".topicName").text(data.topic.name);
				$(".questionNumber").text(questionNumber);
							  
				$.each(data.answers, function(index,item){
			  		htmlString = "<li><input type='radio' name='answer' value='" + (index+1) + "'><a>" + item.answer_text + "</a></input></li>";
					$(".choices").append(htmlString);
				});
	});
	});
});

// AJAX Handle Submit
</script>

<div id="contentArea">
	
	<section id="questionContent">
		
		<div id="questionBox">
			<div id="questionText">
				<p><span><%= @user_test.questions[0].question_text %></span></p>
				<hr />
			</div> <!-- questionText -->
			<div id="answers">
				<%= form_tag('/user_test/1', :remote => true) do %>
				<%= hidden_field_tag 'question_number' %>
				<ol class="choices">
				<% @user_test.questions[0].answers.each_with_index do |choice, index| %>
				<li><input type="radio" name="answer" value=<%= index + 1 %>><a><%= choice.answer_text %></a></input></li>
				<% end %>
				</ol>
				<hr />
				<%= submit_tag 'Submit' %>
				<% end %>
			</div> <!-- choices -->		
		</div> <!-- questionBox -->
		
		<div id="rightSidebar">
			
			<div id="questionInfo">
				<h1>Question <span class='questionNumber'>1</span></h1><br />
				<h4>Testlet 1</h4><br />
				<h3>Topic: <span class='topicName'><%= @user_test.questions[0].topic.name %></span></h3>
				<h3>SubTopic: <span class='subTopicName'>None</span></h3><br />
				<h3>Source: <span class="questionSource"><%= @user_test.questions[0].source %></span></h3>
			</div> <!-- questionInfo -->
			
			<div id="timer">	
				<h2>Timer</h2>
				<h3><span>10800</span></h3>
			</div> <!-- timer -->
			
			<div id="runningScore">
				<h3>Correct: 0</h3>
				<h3>Incorrect: 0</h3>
			</div> <!-- runningScore -->
		</div>	<!-- rightSidebar -->
			
	</section> <!-- questionContent -->
	
	<section id="pagination" class="clearfix">
	<nav class="pagination">
		<% @testlet.each_with_index do |page, index| %>
		<span class="page"><a <%= "class='single_digit'" if index < 9 %> href=<%= "?question=#{index + 1}" %> data-remote="true"><%= index+1 %></a></span>
		<% end %>	
	</nav>		
	</section> <!-- pagination -->			
	
</div>	