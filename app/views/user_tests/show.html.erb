<style>

/* DIV Layout
===================== */
.container {
	width: 1200px;
}

#contentArea {
	width: 1200px;
	margin: 0 auto;
	position: relative;
}

#questionBox {
	height: 500px;
	width: 800px;
	float: left;
	box-sizing: border-box;
}

#rightSidebar {
	width: 320px;
	float: right;
}

/* Question Formatting 
===================== */

.clearfix {
	clear: both;
}

#questionBox p, #questionBox li {
	font-size: 16px;
	padding: 3px;
}

#questionBox li {
	margin-left: 10px;
}

ol.choices {
	list-style-type: upper-alpha;
}

.choices a:hover {
	text-decoration: none;
}

.page a {
	line-height: 15px;
	padding: 10px;
}

.page a.single_digit {
	padding: 10px 14px;
}

#questionText p {
	padding: 10px;
}

#answers a {
	padding-left: 6px;
	cursor: pointer;
}

.answered {
	background-color: #444;
}

.answered:hover {
	background-color: #444;
}

.currentQuestion {
	font-size: 20px;
	font-weight: bold;
}

.questionSource, .subTopicName {
	padding-left: 50px;
}

#runningScore {
	width: 75%;
}

#runningScore th {
	font-size: 20px;
}

#runningScore td {
	text-align: center;
	font-weight: bold;
	font-size: 18px;
	padding-top: 15px;
	padding-bottom: 15px;
}

.correctAnswers {
	color: green;
}

.wrongAnswers {
	color: red;
}

.submit {
	margin-left: 12px;
}

#timer {
	width: 60%;
	margin: 0 auto;
}

.timer {
	font-size: 30px;
}
</style>

<script>
// Global Variables
var correctAnswers = 0;
var wrongAnswers = 0;

function seconds2time (seconds) {
    var hours   = Math.floor(seconds / 3600);
    var minutes = Math.floor((seconds - (hours * 3600)) / 60);
    var seconds = seconds - (hours * 3600) - (minutes * 60);
    var time = "";

    if (hours != 0) {
      time = hours+":";
    }
    if (minutes != 0 || time !== "") {
      minutes = (minutes < 10 && time !== "") ? "0"+minutes : String(minutes);
      time += minutes+":";
    }
    if (time === "") {
      time = seconds+"s";
    }
    else {
      time += (seconds < 10) ? "0"+seconds : String(seconds);
    }
    return time;
}

// Set the countdown timer
$(function() {
	var sec = 10800;
	var timer = setInterval(function() {
		$("#timer .timer").text(seconds2time(--sec));
		if(sec == 0) {
			clearInterval(timer);
		}
	}, 1000);
});

// AJAX Change Question
$(function() {
	$(".page a").click(function() {
		if($(this).hasClass('answered') == false) {
	var questionNumber = $(this).attr("href").replace(/.*=/, "");
	$("#pagination span").removeClass("currentQuestion");
	$("#page"+questionNumber).addClass("currentQuestion");
	$("#answers form").attr("action", "/user_test/" + questionNumber);
	$.getJSON(window.location.href + $(this).attr("href"), 
			  function(data){
		      	$(".choices").html("");
			  	$("#questionText span").text(data.question.question_text);
			    $(".questionSource").text(data.question.source);
				$(".topicName").text(data.question.topic.name);
				$(".questionNumber").text(questionNumber);
							  
				$.each(data.question.answers, function(index,item){
					var value = item.correct? "correct" : "wrong";
			  		htmlString = "<li><input type='radio' name='answer' value='" + value + "'><a>" + item.answer_text + "</a></input></li>";
					$(".choices").append(htmlString);
				});
	});
		}
	});
});

// AJAX Handle Submit
$(function() {
	$("#answers .submit").click(function() {
		var questionNumber = parseInt($(".questionNumber").text());
		// Gray the current question
		$("#page"+questionNumber+" a").addClass("answered");
		$("#pagination span").removeClass("currentQuestion");
		$("#page"+(questionNumber+1)).addClass("currentQuestion");
		
		// See if the answer was correct
		var answer = $('input:radio[name=answer]:checked').val();
		answer == "correct" ? correctAnswers++ : wrongAnswers++;
		$(".correctAnswers").text(correctAnswers); $(".wrongAnswers").text(wrongAnswers);
		
				
		// Go to the Next Question
		$.getJSON(window.location.href + "?question=" + (questionNumber+1), 
				  function(data){
			      	$(".choices").html("");
				  	$("#questionText span").text(data.question.question_text);
				    $(".questionSource").text(data.question.source);
					$(".topicName").text(data.question.topic.name);
					$(".questionNumber").text(questionNumber+1);

					$.each(data.question.answers, function(index,item){
						var value = item.correct? "correct" : "wrong";
				  		htmlString = "<li><input type='radio' name='answer' value='" + value + "'><a>" + item.answer_text + "</a></input></li>";
						$(".choices").append(htmlString);
					});
		});
	});
});

</script>

<div id="contentArea">
	
	<section id="questionContent">
		
		<div id="questionBox">
			<div id="questionText">
				<p><span><%= @user_test.questions[0].question_text %></span></p>
				<hr />
			</div> <!-- questionText -->
			<div id="answers">
				<%= form_tag('/user_test/1', :remote => true) do %>
				<%= hidden_field_tag 'question_number' %>
				<ol class="choices">
				<% @user_test.questions[0].answers.each_with_index do |choice, index| %>
				<li><input type="radio" name="answer" value=<%= choice.correct? ? "correct" : "wrong" %>><a><%= choice.answer_text %></a></input></li>
				<% end %>
				</ol>
				<hr />
				<%= submit_tag 'Submit', :class => 'submit' %>
				<% end %>
			</div> <!-- choices -->		
		</div> <!-- questionBox -->
		
		<div id="rightSidebar">
			
			<div id="questionInfo">
				<h1>Question <span class='questionNumber'>1</span></h1>
				<h4><span class="questionSource"><%= @user_test.questions[0].source %></span></h4>
				<br /><br /><br />
				<h3><span class='topicName'><%= @user_test.questions[0].topic.name %></span></h3>
				<!-- <h4><span class='subTopicName'>None</span></h4> -->
			</div> <!-- questionInfo -->
			
			<br /><br /><br />
			
			<table id="runningScore">
				<tr><th>Correct</th><th>Incorrect</th></tr>
				<tr><td><span class="correctAnswers">0</span></td><td><span class="wrongAnswers">0</span></td></tr>
			</table><!-- runningScore -->
			
			<br /><br /><br /><br />
			
			<div id="timer">	
				<h2><span class="timer">3:00:00</span></h2>
			</div> <!-- timer -->
		</div>	<!-- rightSidebar -->
			
	</section> <!-- questionContent -->
	
	<section id="pagination" class="clearfix">
	<nav class="pagination">
		<% @testlet.each_with_index do |page, index| %>
		<span <%= "id='page#{index+1}'" %> class="page <%= "currentQuestion" if index == 0 %>"><a <%= "class='single_digit'" if index < 9 %> href=<%= "?question=#{index + 1}" %> data-remote="true"><%= index+1 %></a></span>
		<% end %>	
	</nav>		
	</section> <!-- pagination -->			
	
</div>	