<style>
h2 {
	text-align: center;
}

ol.answers {
    display: block;
    padding: 0 0 0 26px;
    list-style-type: upper-alpha;
    overflow: hidden;
}

ol.answers li:not(:last-child) {
    width: 200px;
    margin-right: 30px;
    float: left;
    position: relative
}

ol.answers li:last-child {
	width: 210px;
	margin-right: 0;
	float: left;
    position: relative;
}

li.alert {
	padding-right: 14px;
}

.questionSummary {
	margin-bottom: 15px;
}

#testSummary {
	margin-top: 25px;
}
</style>

<div id="testSummary" class="well well-small">
<h2>Test Summary (<%= @utq[0].user_test.section.code %>)</h2>
<h2>Score: <%= @score %></h2>	
</div>

<ol>
<% @utq.each do |utq| %>
	<div class="questionSummary">
	<% if utq.answered_correct? %>
	<li class="alert alert-success"><%= utq.question.question_text %></li>
	<% else %>
	<li class="alert alert-error"><%= utq.question.question_text %></li>
	<% end %>
	<ol class="answers">
		<% utq.question.answers.each do |choice| %>
			<li class="<%= choice.correct? ? "alert alert-info" : "" %>"><span><%= choice.answer_text %></span></li>
		<% end %>
	</ol>
	</div>
<% end %>	
</ol>